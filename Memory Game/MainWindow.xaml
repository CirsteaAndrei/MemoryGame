<Window x:Class="Memory_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        >

    <Grid>
        <Border Background="#212529"
                CornerRadius="20"/>
        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,10,10,358" Width="72">
            <Button x:Name="HideButtom"  HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" 
                    Click="Minimize_Click" Background="Transparent" Margin="0,0,10,0">
                <Image Source="/Images/Controls/-.png"/>
            </Button>

            <Button x:Name="ExitButtom"  HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" 
                    Click="Cancel_Click" Background="Transparent">
                <Image Source="/Images/Controls/x.png"/>
            </Button>
        </StackPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </Grid>

</Window>
